{
  "name": "Brainhub-framework-app",
  "version": "1.0.0-alpha.1",
  "description": "Brainhub framework app",
  "main": "dist",
  "scripts": {
    "dev": "NODE_PATH=./src:./lib NODE_ENV=development nodemon -w src --exec 'babel-node src'",
    "build": "NODE_PATH=./src:./lib babel index.js init.js src -s -D -d dist",
    "start": "NODE_PATH=dist NODE_ENV=production node dist",
    "prestart": "NODE_PATH=./src:./lib npm run -s build",
    "lint": "NODE_PATH=./src:./lib eslint src lib test",
    "lint:fix": "NODE_PATH=./src:./lib eslint src lib test --fix",
    "test": "npm run -s test:unit && npm run -s test:e2e",
    "test:unit": "NODE_PATH=./src:./lib NODE_ENV=test mocha tools/testSetup.js './src/**/__tests__/*.js' -r babel-register",
    "test:e2e": "./test.sh",
    "test:cucumber": "NODE_PATH=./src:./lib NODE_ENV=test ./node_modules/.bin/cucumberjs --compiler=js:babel-register",

    "start:test": "npm run test",
    "start:development": "pm2-dev start --interpreter babel-node index.js",
    "start:production": "pm2-docker start pm2.config.js --env production",
    "docker:build": "docker build -t brainhub-framework-app ."
  },
  "author": "Brainhub",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "dotenv": "4.0.0"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-preset-env": "1.6.1",
    "chai": "4.1.2",
    "cucumber": "3.1.0",
    "dirty-chai": "2.0.1",
    "eslint": "4.12.0",
    "eslint-config-brainhub": "1.6.3",
    "mocha": "4.0.1",
    "nodemon": "1.12.1",
    "sinon": "4.1.2",
    "sinon-chai": "2.14.0"
  }
}
