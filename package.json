{
  "name": "brainhub-framework-app",
  "version": "1.0.0-alpha.1",
  "description": "Brainhub framework app",
  "main": "dist",
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"build,node\" -c \"blue.bold,green.bold\" \"npm run build:watch\" \"npm run start:watch\"",
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "NODE_ENV=production NODE_PATH=./dist/src:./dist/lib node dist/src",
    "start:watch": "NODE_ENV=development NODE_PATH=./dist/src:./dist/lib nodemon --watch dist dist/src",
    "prestart": "npm run build",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint  -c tslint.json -p tsconfig.json --fix",
    "test": "npm run -s test:unit && npm run -s test:e2e",
    "test:unit": "NODE_ENV=test NODE_PATH=src:lib mocha -r ts-node/register tools/testSetup.ts './src/**/__tests__/*.ts'",
    "test:unit:watch": "npm run test:unit -- --reporter min --watch-extensions ts --watch",
    "test:e2e": "./test.sh",
    "test:cucumber": "NODE_ENV=test ./node_modules/.bin/cucumberjs --compiler=ts:ts-node/register"
  },
  "author": "Brainhub",
  "license": "MIT",
  "dependencies": {
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "dotenv": "4.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/chai": "4.1.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/cors": "2.8.3",
    "@types/cucumber": "4.0.1",
    "@types/dotenv": "4.0.2",
    "@types/express": "4.11.1",
    "@types/mocha": "2.2.48",
    "@types/node": "9.4.6",
    "@types/sinon": "4.1.3",
    "@types/sinon-chai": "2.7.29",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "concurrently": "3.5.1",
    "cucumber": "3.1.0",
    "dirty-chai": "2.0.1",
    "mocha": "4.0.1",
    "nodemon": "1.12.1",
    "sinon": "4.1.2",
    "sinon-chai": "2.14.0",
    "ts-node": "5.0.0",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
