{
  "name": "brainhub-framework-app",
  "version": "1.0.0-alpha.1",
  "description": "Brainhub framework app",
  "main": "dist",
  "scripts": {
    "start:production": "NODE_ENV=production NODE_PATH=./dist/src:./dist/lib node dist/src",
    "start:development": "npm run build && concurrently --kill-others --prefix \"[{name}]\" --names \"build,node\" --prefix-colors \"blue.bold,green.bold\" \"npm run build:watch\" \"sleep 3 && npm run start:watch\"",
    "start:test": "NODE_ENV=development NODE_PATH=./dist/src:./dist/lib node dist/src",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start:watch": "NODE_ENV=development NODE_PATH=./dist/src:./dist/lib nodemon --watch ./dist/ ./dist/src",
    "prestart": "npm run build",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "lint:fix": "tslint  -c tslint.json -p tsconfig.json --fix",
    "test": "npm run -s test:unit && npm run -s test:e2e",
    "test:unit": "NODE_ENV=test NODE_PATH=src:lib mocha -r ts-node/register tools/testSetup.ts './packages/**/__tests__/*.ts'",
    "test:unit:watch": "npm run test:unit -- --reporter min --watch-extensions ts --watch",
    "test:e2e": "./test.sh",
    "test:cucumber": "NODE_ENV=test ./node_modules/.bin/cucumberjs --compiler=ts:ts-node/register",
    "docker:build": "docker build -t brainhub-framework-app ."
  },
  "author": "Brainhub",
  "license": "MIT",
  "dependencies": {
    "ajv": "6.2.1",
    "body-parser": "1.18.2",
    "cors": "2.8.4",
    "dotenv": "4.0.0",
    "mongodb": "3.0.4",
    "mssql": "4.1.0",
    "mysql": "2.15.0",
    "pg": "7.4.1",
    "pm2": "github:Unitech/pm2#development"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.8",
    "@types/chai": "4.1.2",
    "@types/chai-as-promised": "7.1.0",
    "@types/cors": "2.8.3",
    "@types/cucumber": "4.0.1",
    "@types/dotenv": "4.0.2",
    "@types/express": "4.11.1",
    "@types/fs-extra": "5.0.1",
    "@types/http-status": "0.2.30",
    "@types/mocha": "2.2.48",
    "@types/multer": "1.3.6",
    "@types/node": "9.4.6",
    "@types/sinon": "4.1.3",
    "@types/sinon-chai": "2.7.29",
    "@types/supertest": "2.0.4",
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "concurrently": "3.5.1",
    "cucumber": "3.1.0",
    "cucumber-steps": "git+https://github.com/brainhubeu/cucumber-steps.git",
    "dirty-chai": "2.0.1",
    "express": "4.16.2",
    "fs-extra": "5.0.0",
    "http-status": "1.0.1",
    "lerna": "^2.9.0",
    "mocha": "4.0.1",
    "multer": "1.3.0",
    "nodemon": "1.12.1",
    "ramda": "0.25.0",
    "reflect-metadata": "0.1.12",
    "sinon": "4.1.2",
    "sinon-chai": "2.14.0",
    "supertest": "3.0.0",
    "ts-node": "5.0.0",
    "tslint": "5.9.1",
    "tslint-config-airbnb": "5.7.0",
    "tslint-eslint-rules": "5.1.0",
    "typeorm": "0.1.16",
    "typescript": "2.7.2"
  }
}
