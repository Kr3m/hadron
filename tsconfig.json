{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "noEmitOnError": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "src/*",
                "lib/*",
                "node_modules/*",
                "types/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "lib/**/*"
    ],
    "exclude": [
        "node_modules",
        "src/**/__tests__/*"
    ]
}
